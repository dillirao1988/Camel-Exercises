<?xml version="1.0" encoding="UTF-8"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.0.0 http://karaf.apache.org/xmlns/features/v1.0.0"
          name="com.fusesource.training">

    <!-- import other features files -->
    <repository>mvn:org.apache.servicemix/apache-servicemix/${servicemix.version}/xml/features</repository>

    <feature name="camel-exercises-cbr">
        <feature version="${camel.version}">camel-core</feature>
        <bundle>mvn:${pom.groupId}/cbr/${pom.version}</bundle>
    </feature>

    <feature name="camel-exercises-cbr-endpoints">
        <feature version="${camel.version}">camel-core</feature>
        <bundle>mvn:${pom.groupId}/cbr-endpoints/${pom.version}</bundle>
    </feature>

    <feature name="camel-exercises-exception">
        <feature version="${camel.version}">camel-core</feature>
        <bundle>mvn:${pom.groupId}/exception/${pom.version}</bundle>
    </feature>

    <feature name="camel-exercises-webservice">
        <feature version="${camel.version}">camel-core</feature>
        <feature version="${camel.version}">camel-soap</feature>
        <feature version="${camel.version}">camel-http</feature>
        <feature version="${camel.version}">camel-cxf</feature>
        <bundle>mvn:${pom.groupId}/webservice/${pom.version}</bundle>
    </feature>

    <feature name="camel-exercises-ftp">
        <feature version="${camel.version}">camel-core</feature>
        <feature version="${camel.version}">camel-jms</feature>
        <feature version="${camel.version}">camel-ftp</feature>
        <feature version="${camel.version}">camel-csv</feature>
        <bundle>mvn:${project.groupId}/ftp/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-ftp-to-jms">
        <feature version="${camel.version}">camel-core</feature>
        <feature version="${camel.version}">camel-jms</feature>
        <feature version="${camel.version}">camel-ftp</feature>
        <feature version="${camel.version}">camel-bindy</feature>
        <bundle>mvn:${project.groupId}/ftp-to-jms/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-cache">
        <feature version="${camel.version}">camel-cache</feature>
        <bundle>mvn:${project.groupId}/cache/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-ws-proxy">
        <feature>http</feature>
        <feature version="${camel.version}">camel-http</feature>
        <feature version="${camel.version}">camel-cxf</feature>
        <bundle>mvn:${project.groupId}/ws-proxy/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-wssecurity">
        <feature>http</feature>
        <feature version="${camel.version}">camel-cxf</feature>
        <feature version="${camel.version}">camel-velocity</feature>
        <feature>saaj</feature>
        <bundle>mvn:${project.groupId}/wssecurity/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-splitter">
        <feature version="${camel.version}">camel-core</feature>
        <feature version="${camel.version}">camel-jms</feature>
        <bundle>mvn:${project.groupId}/splitter/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-aggregator">
        <feature version="${camel.version}">camel-core</feature>
        <feature version="${camel.version}">camel-jms</feature>
        <bundle>mvn:${project.groupId}/aggregator/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-jms-transaction">
        <feature version="${camel.version}">camel-core</feature>
        <feature version="${camel.version}">camel-jms</feature>
        <feature version="${camel.version}">camel-jaxb</feature>
        <bundle>mvn:${project.groupId}/jms-transaction/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-jdbc-jms-transaction">
        <feature version="${camel.version}">camel-core</feature>
        <feature version="${camel.version}">camel-jms</feature>
        <feature version="${camel.version}">camel-jaxb</feature>
        <bundle>mvn:org.springframework/spring-jdbc/${spring.version}</bundle>
        <bundle>wrap:mvn:postgresql/postgresql/${postgres.version}</bundle>
        <bundle>mvn:${project.groupId}/jdbc-jms-transaction/${project.version}</bundle>
    </feature>

    <feature name="camel-exercises-custom-file-component">
        <feature version="${camel.version}">camel-core</feature>
        <bundle>mvn:${project.groupId}/custom-file-component/${project.version}</bundle>
    </feature>

</features>